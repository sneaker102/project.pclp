<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">


    <LinearLayout

        android:id="@+id/maybeFragment"
        android:layout_width="199dp"
        android:layout_height="567dp"
        android:background="#013A55"
        android:orientation="vertical"
        android:translationX="-204dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/layHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/eye_menu_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"

            android:layout_marginTop="50dp"
            android:src="@drawable/knowledge_img"
            android:visibility="visible"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="30dp" />

        <TextView
            android:id="@+id/take_a_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="monospace"
            android:text="Take a look"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:textStyle="normal|bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="monospace"
            android:lineSpacingExtra="14sp"
            android:maxLines="1"
            android:shadowColor="#4726ca"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text=""
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/homeBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bttn_menu_background"
            android:text="Home"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:textStyle="normal"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/orarBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/bttn_menu_background"
            android:text="Orar"
            android:textAllCaps="false"
            android:textColor="#5A6B95"
            android:textSize="18dp"
            android:textStyle="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/universityBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/bttn_menu_background"

            android:text="University"
            android:textAllCaps="false"
            android:textColor="#5A6B95"
            android:textSize="18dp"
            android:textStyle="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/groupBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/bttn_menu_background"
            android:text="Chat"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textColor="#5A6B95"
            android:textSize="18dp"
            android:textStyle="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/gradesBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/bttn_menu_background"
            android:text="Grades"
            android:textAllCaps="false"
            android:textColor="#5A6B95"
            android:textSize="18dp"
            android:textStyle="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/logOutBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bttn_menu_background"
            android:text="Log out"
            android:textAllCaps="false"
            android:textColor="#5A6B95"
            android:textSize="18dp"
            android:visibility="visible" />


    </LinearLayout>



    <RelativeLayout
        android:id="@+id/layHome"
        android:layout_width="344dp"
        android:layout_height="430dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layHeader">


        <ImageView
            android:id="@+id/orarImg"
            android:layout_width="125dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/orar_img" />

        <ImageView
            android:id="@+id/chatNotify"
            android:layout_width="41dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_marginStart="277dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/exclamatie_vector" />
        <ImageView
            android:id="@+id/chatFastImg"
            android:layout_width="132dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="176dp"
            android:layout_marginTop="0dp"
            android:visibility="visible"
            android:src="@drawable/chat_fast" />

        <TextView
            android:id="@+id/orarZiHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_marginStart="0dp"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/day_background"
            android:text="LUNI"
            android:textAlignment="center"
            android:textColor="#33332E"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="2"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <HorizontalScrollView
            android:id="@+id/orarZi"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orarZiHeader"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp"
            android:background="#FFF"
            android:scrollbars="none"
            android:visibility="invisible"
            tools:layout_editor_absoluteY="214dp">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/clasa8"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/table_background"
                    android:padding="2dp"

                    android:text=""
                    android:shadowColor="#000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/clasa10"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/table_background"
                    android:padding="2dp"

                    android:shadowColor="#000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"
                    android:text=""
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/clasa12"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:background="@drawable/table_background"
                    android:padding="2dp"

                    android:shadowColor="#000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"
                    android:text=""
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/clasa14"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:background="@drawable/table_background"
                    android:padding="2dp"
                    android:shadowColor="#000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"
                    android:text=""
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/clasa16"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"

                    android:background="@drawable/table_background"
                    android:padding="2dp"
                    android:shadowColor="#000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"
                    android:text=""
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/clasa18"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_background"
                    android:padding="2dp"
                    android:shadowColor="#000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"
                    android:text=""
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/clasa20"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_background"
                    android:padding="2dp"
                    android:shadowColor="#000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"
                    android:text=""
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:id="@+id/newsScroll"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_below="@+id/orarZi"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="99dp"
                        android:src="@drawable/notify_orar" />

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="0dp"
                        android:text="Anunt important in cadrul facultatii IESC"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_below="@+id/titleText"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="2dp"
                        android:text="In data de 20.03.2019 va avea loc inaugararea unei noi sali de laboratoare dotate cu sisteme de ultima generatie."
                        android:textSize="18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="99dp"
                        android:src="@drawable/notify_orar" />

                    <TextView
                        android:id="@+id/titleText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="0dp"
                        android:text="Ultima strigare pentru depunerea proiectelor"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_below="@+id/titleText2"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="2dp"
                        android:text="In data de 20.03.2019 va avea loc inaugararea unei noi sali de laboratoare dotate cu sisteme de ultima generatie."
                        android:textSize="18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="99dp"
                        android:src="@drawable/notify_orar" />

                    <TextView
                        android:id="@+id/titleText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="0dp"
                        android:text="Anunt important in cadrul facultatii IESC"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_below="@+id/titleText1"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="2dp"
                        android:text="In data de 20.03.2019 va avea loc inaugararea unei noi sali de laboratoare dotate cu sisteme de ultima generatie."
                        android:textSize="18dp" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layHeader"
        android:layout_width="386dp"
        android:layout_height="118dp"
        app:layout_constraintBottom_toTopOf="@+id/layHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/menuBttnSwipe"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="300dp"
            android:background="@drawable/menubackground"
            android:visibility="visible"

            app:layout_constraintTop_toTopOf="@id/textStudentHelper" />


        <TextView
            android:id="@+id/textStudentHelper"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_below="@+id/menuBttnSwipe"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"

            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"

            android:background="@drawable/header_blue"
            android:gravity="center"
            android:text="\n STELPER\n"
            android:textColor="#FFF"
        android:shadowColor="#443dd8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="38"
            android:textSize="26dp"
            android:visibility="visible" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>